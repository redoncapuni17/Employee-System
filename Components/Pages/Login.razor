@page "/login"
@using Microsoft.AspNetCore.Components.Forms

<EditForm Model="@userModel" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card p-4 shadow-lg" style="width: 20rem; margin-top: -10vh;">

            <div class="text-center mb-3">
                @* <i class="fa-solid fa-circle-user" style="font-size: 72px;"></i> *@
                <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>
            </div>

            <div class="form-group">
                <label for="inputUsername">Username or email address</label>
                <InputText id="inputUsername" class="form-control" @bind-Value="userModel.Username" required />
            </div>

            <div class="form-group">
                <label for="inputPassword">Password</label>
                <InputText id="inputPassword" type="password" class="form-control" @bind-Value="userModel.Password" required />
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-3";">Sign in</button>

            <div class="mt-3 text-center">
                <a href="/forgot-password">Forgot password?</a>
            </div>
        </div>
    </div>
</EditForm>

@code {
    private UserModel userModel = new UserModel();

    private void HandleValidSubmit()
    {
        // Handle login logic here
        Console.WriteLine($"Username: {userModel.Username}, Password: {userModel.Password}");
    }

    public class UserModel
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
