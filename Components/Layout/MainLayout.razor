@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    @if (!Navigation.Uri.Contains("/login") && !Navigation.Uri.Contains("/signup"))
    {
    <div class="sidebar">
        <NavMenu />
    </div>
    }
    <main>
        <div class="top-row px-4">
            <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Sign in
            </NavLink>

            <NavLink class="nav-link" href="signup" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Sign up
            </NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
